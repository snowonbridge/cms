<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-uid" class="control-label col-xs-12 col-sm-2">{:__('Uid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-uid" data-rule="required" class="form-control" name="row[uid]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-cardid" class="control-label col-xs-12 col-sm-2">{:__('Cardid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-cardid" data-rule="required" class="form-control" name="row[cardid]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-ptype" class="control-label col-xs-12 col-sm-2">{:__('Ptype')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-ptype" data-rule="required" class="form-control" name="row[ptype]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-reward_times" class="control-label col-xs-12 col-sm-2">{:__('Reward_times')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-reward_times" data-rule="required" class="form-control" name="row[reward_times]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-buy_time" class="control-label col-xs-12 col-sm-2">{:__('Buy_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-buy_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[buy_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-expir_time" class="control-label col-xs-12 col-sm-2">{:__('Expir_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-expir_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[expir_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-status" class="control-label col-xs-12 col-sm-2">{:__('Status')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-status" data-rule="required" class="form-control" name="row[status]" type="number" value="1">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
