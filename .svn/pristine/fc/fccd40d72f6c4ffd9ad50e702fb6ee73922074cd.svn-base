<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-uid" class="control-label col-xs-12 col-sm-2">{:__('Uid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-uid" data-rule="required" class="form-control" name="row[uid]" type="number" value="{$row.uid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-exchange_id" class="control-label col-xs-12 col-sm-2">{:__('Exchange_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-exchange_id" data-rule="required" data-source="exchange/index" class="form-control selectpage" name="row[exchange_id]" type="text" value="{$row.exchange_id}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_setting_id" class="control-label col-xs-12 col-sm-2">{:__('Gift_setting_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_setting_id" data-rule="required" data-source="gift/setting/index" class="form-control selectpage" name="row[gift_setting_id]" type="text" value="{$row.gift_setting_id}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_content_id" class="control-label col-xs-12 col-sm-2">{:__('Gift_content_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_content_id" data-rule="required" data-source="gift/content/index" class="form-control selectpage" name="row[gift_content_id]" type="text" value="{$row.gift_content_id}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-lucky_value" class="control-label col-xs-12 col-sm-2">{:__('Lucky_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-lucky_value" data-rule="required" class="form-control" name="row[lucky_value]" type="number" value="{$row.lucky_value}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-rate" class="control-label col-xs-12 col-sm-2">{:__('Rate')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-rate" data-rule="required" class="form-control" step="0.0001" name="row[rate]" type="number" value="{$row.rate}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-turn_counts" class="control-label col-xs-12 col-sm-2">{:__('Turn_counts')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-turn_counts" data-rule="required" class="form-control" name="row[turn_counts]" type="number" value="{$row.turn_counts}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_num" class="control-label col-xs-12 col-sm-2">{:__('Gift_num')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_num" data-rule="required" class="form-control" name="row[gift_num]" type="number" value="{$row.gift_num}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-expect_min_value" class="control-label col-xs-12 col-sm-2">{:__('Expect_min_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-expect_min_value" data-rule="required" class="form-control" name="row[expect_min_value]" type="number" value="{$row.expect_min_value}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-expect_max_value" class="control-label col-xs-12 col-sm-2">{:__('Expect_max_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-expect_max_value" data-rule="required" class="form-control" name="row[expect_max_value]" type="number" value="{$row.expect_max_value}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-create_time" class="control-label col-xs-12 col-sm-2">{:__('Create_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-create_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[create_time]" type="text" value="{$row.create_time|datetime}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
