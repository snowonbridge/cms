<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="" >

    <div class="form-group">
        <label for="c-sid" class="control-label col-xs-12 col-sm-2">{:__('sid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-sid" data-rule="required" class="form-control" name="row[sid]" type="number" value="{$row.sid}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label for="c-mid" class="control-label col-xs-12 col-sm-2">{:__('mid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-mid" data-rule="required" class="form-control" name="row[mid]" type="number" value="{$row.mid}" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="c-agent_id" class="control-label col-xs-12 col-sm-2">{:__('agent_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-agent_id" data-rule="required" class="form-control" name="row[agent_id]" type="number" value="{$row.agent_id}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label for="c-parent_agent_id" class="control-label col-xs-12 col-sm-2">上级代理id:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-parent_agent_id" data-rule="required" class="form-control" name="row[parent_agent_id]" type="number" value="{$row.parent_agent_id}" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="c-agent_level" class="control-label col-xs-12 col-sm-2">代理等级:</label>
        <div class="col-xs-12 col-sm-8">
            <select  id="agent_level" data-rule="required" class="form-control selectpicker" name="row[agent_level]">
                {foreach name="agentLevelList" item="vo"}
                <option value="{$key}" {in name="key" value="$row['agent_level']"}selected{/in}>{$vo}</option>
                {/foreach}
            </select>

        </div>
    </div>
    <div class="form-group">
        <label for="c-remark" class="control-label col-xs-12 col-sm-2">{:__('remark')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-remark" data-rule="required" class="form-control" name="row[remark]" type="text" value="" placeholder="请输入原因">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>