<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-uid" class="control-label col-xs-12 col-sm-2">{:__('Uid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-uid" data-rule="required" class="form-control" name="row[uid]" type="number" value="{$row.uid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-title_counts" class="control-label col-xs-12 col-sm-2">{:__('Title_counts')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-title_counts" data-rule="required" class="form-control" name="row[title_counts]" type="number" value="{$row.title_counts}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-active_value_id" class="control-label col-xs-12 col-sm-2">{:__('Active_value_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-active_value_id" data-rule="required" data-source="active/value/index" class="form-control selectpage" name="row[active_value_id]" type="text" value="{$row.active_value_id}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-active_level" class="control-label col-xs-12 col-sm-2">{:__('Active_level')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-active_level" data-rule="required" class="form-control" name="row[active_level]" type="text" value="{$row.active_level}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-active_value" class="control-label col-xs-12 col-sm-2">{:__('Active_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-active_value" data-rule="required" class="form-control" name="row[active_value]" type="number" value="{$row.active_value}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-add_day_time" class="control-label col-xs-12 col-sm-2">{:__('Add_day_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-add_day_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[add_day_time]" type="text" value="{$row.add_day_time|datetime}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-add_time" class="control-label col-xs-12 col-sm-2">{:__('Add_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-add_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[add_time]" type="text" value="{$row.add_time|datetime}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
