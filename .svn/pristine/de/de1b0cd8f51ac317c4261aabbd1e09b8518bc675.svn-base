<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-cate_name" class="control-label col-xs-12 col-sm-2">{:__('Cate_name')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-cate_name" data-rule="required" class="form-control" name="row[cate_name]" type="text">
        </div>
    </div>
    <div class="form-group">
        <label for="c-cate_desc" class="control-label col-xs-12 col-sm-2">{:__('Cate_desc')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-cate_desc" data-rule="required" class="form-control" name="row[cate_desc]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-status" class="control-label col-xs-12 col-sm-2">{:__('Status')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-status" data-rule="required" class="form-control" name="row[status]" type="number" value="1">
        </div>
    </div>
    <div class="form-group">
        <label for="c-activity_id" class="control-label col-xs-12 col-sm-2">{:__('Activity_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-activity_id" data-rule="required" data-source="activity/index" class="form-control selectpage" name="row[activity_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-parent_id" class="control-label col-xs-12 col-sm-2">{:__('Parent_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-parent_id" data-rule="required" data-source="parent/index" class="form-control selectpage" name="row[parent_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-activity_type" class="control-label col-xs-12 col-sm-2">{:__('Activity_type')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-activity_type" data-rule="required" class="form-control" name="row[activity_type]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-sort_value" class="control-label col-xs-12 col-sm-2">{:__('Sort_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-sort_value" data-rule="required" class="form-control" name="row[sort_value]" type="number" value="0">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
