<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-channel_id" class="control-label col-xs-12 col-sm-2">{:__('Channel_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-channel_id" data-rule="required" data-source="channel/index" class="form-control selectpage" name="row[channel_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-version" class="control-label col-xs-12 col-sm-2">{:__('Version')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-version" data-rule="required" class="form-control" name="row[version]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-name" class="control-label col-xs-12 col-sm-2">{:__('Name')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-name" data-rule="required" class="form-control" name="row[name]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-title" class="control-label col-xs-12 col-sm-2">{:__('Title')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-title" data-rule="required" class="form-control" name="row[title]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-type" class="control-label col-xs-12 col-sm-2">{:__('Type')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-type" data-rule="required" class="form-control" name="row[type]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-show_type" class="control-label col-xs-12 col-sm-2">{:__('Show_type')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-show_type" data-rule="required" class="form-control" name="row[show_type]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_content" class="control-label col-xs-12 col-sm-2">{:__('Gift_content')}:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea id="c-gift_content" data-rule="required" class="form-control summernote" rows="5" name="row[gift_content]" cols="50"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="c-redirect_id" class="control-label col-xs-12 col-sm-2">{:__('Redirect_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-redirect_id" data-rule="required" data-source="redirect/index" class="form-control selectpage" name="row[redirect_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-redirect_btn_text" class="control-label col-xs-12 col-sm-2">{:__('Redirect_btn_text')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-redirect_btn_text" data-rule="required" class="form-control" name="row[redirect_btn_text]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-redirect_url" class="control-label col-xs-12 col-sm-2">{:__('Redirect_url')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-redirect_url" data-rule="required" class="form-control" name="row[redirect_url]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-show_text" class="control-label col-xs-12 col-sm-2">{:__('Show_text')}:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea id="c-show_text" class="form-control " rows="5" name="row[show_text]" cols="50"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="c-text_args" class="control-label col-xs-12 col-sm-2">{:__('Text_args')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-text_args" data-rule="required" class="form-control" name="row[text_args]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-imgs" class="control-label col-xs-12 col-sm-2">{:__('Imgs')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-imgs" data-rule="required" class="form-control" name="row[imgs]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-status" class="control-label col-xs-12 col-sm-2">{:__('Status')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-status" data-rule="required" class="form-control" name="row[status]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-start_time" class="control-label col-xs-12 col-sm-2">{:__('Start_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-start_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[start_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-end_time" class="control-label col-xs-12 col-sm-2">{:__('End_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-end_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[end_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-update_time" class="control-label col-xs-12 col-sm-2">{:__('Update_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-update_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[update_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-create_time" class="control-label col-xs-12 col-sm-2">{:__('Create_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-create_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[create_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
