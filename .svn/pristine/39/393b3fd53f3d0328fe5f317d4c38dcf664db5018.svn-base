<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-uid" class="control-label col-xs-12 col-sm-2">{:__('Uid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-uid" data-rule="required" class="form-control" name="row[uid]" type="number" value="{$row.uid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-olkey" class="control-label col-xs-12 col-sm-2">{:__('Olkey')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-olkey" data-rule="required" class="form-control" name="row[olkey]" type="text" value="{$row.olkey}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-ollogintime" class="control-label col-xs-12 col-sm-2">{:__('Ollogintime')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-ollogintime" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[ollogintime]" type="text" value="{$row.ollogintime|datetime}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-refreshtime" class="control-label col-xs-12 col-sm-2">{:__('Refreshtime')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-refreshtime" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[refreshtime]" type="text" value="{$row.refreshtime|datetime}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-area" class="control-label col-xs-12 col-sm-2">{:__('Area')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-area" data-rule="required" class="form-control" name="row[area]" type="text" value="{$row.area}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gameid" class="control-label col-xs-12 col-sm-2">{:__('Gameid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gameid" data-rule="required" class="form-control" name="row[gameid]" type="number" value="{$row.gameid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-tid" class="control-label col-xs-12 col-sm-2">{:__('Tid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-tid" data-rule="required" class="form-control" name="row[tid]" type="number" value="{$row.tid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-svid" class="control-label col-xs-12 col-sm-2">{:__('Svid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-svid" data-rule="required" class="form-control" name="row[svid]" type="number" value="{$row.svid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-usertype" class="control-label col-xs-12 col-sm-2">{:__('Usertype')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-usertype" data-rule="required" class="form-control" name="row[usertype]" type="number" value="{$row.usertype}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-unid" class="control-label col-xs-12 col-sm-2">{:__('Unid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-unid" data-rule="required" class="form-control" name="row[unid]" type="number" value="{$row.unid}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-ip" class="control-label col-xs-12 col-sm-2">{:__('Ip')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-ip" data-rule="required" class="form-control" name="row[ip]" type="number" value="{$row.ip}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
