<form id="del-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-sid" class="control-label col-xs-12 col-sm-2">{:__('sid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-sid" data-rule="required" class="form-control" name="row[sid]" type="text" value="{$row.sid}" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="c-mid" class="control-label col-xs-12 col-sm-2">{:__('mid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-mid" data-rule="required" class="form-control" name="row[mid]" type="number" value="{$row.mid}" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="c-agent_id" class="control-label col-xs-12 col-sm-2">{:__('agent_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-agent_id" data-rule="required" class="form-control" name="row[agent_id]" type="number" value="{$row.agent_id}" disabled="disabled">
        </div>
    </div>
    <div class="form-group">
        <label for="c-remark" class="control-label col-xs-12 col-sm-2">{:__('remark')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-remark" data-rule="required" class="form-control" name="row[remark]" type="text" value="" placeholder="请输入原因">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed ">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
