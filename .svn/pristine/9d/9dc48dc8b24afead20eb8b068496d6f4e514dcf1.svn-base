<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-sid" class="control-label col-xs-12 col-sm-2">游戏平台标识:</label>
        <div class="col-xs-12 col-sm-8">
            <select  id="sid" data-rule="required" class="form-control selectpicker" name="row[sid]">
                {foreach name="sidList" item="vo"}
                <option value="{$key}" {in name="key" value="$row.sid"}selected{/in}>{$vo}</option>
                {/foreach}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="c-id" class="control-label col-xs-12 col-sm-2">游戏app_id:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-id" data-rule="required" class="form-control" name="row[app_id]" value="{$row.id}" type="number" readonly="readonly">
        </div>
    </div>

    <div class="form-group">
        <label for="c-version" class="control-label col-xs-12 col-sm-2">游戏版本:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-version" data-rule="required" class="form-control" name="row[version]" value="{$row.version}" type="text" placeholder="格式示例：1.0.0">
        </div>
    </div>

    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>