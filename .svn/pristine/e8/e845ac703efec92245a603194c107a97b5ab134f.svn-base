<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-name" class="control-label col-xs-12 col-sm-2">{:__('Name')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-name" data-rule="required" class="form-control" name="row[name]" type="text" value="{$row.name}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-total_days" class="control-label col-xs-12 col-sm-2">{:__('Total_days')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-total_days" data-rule="required" class="form-control" name="row[total_days]" type="number" value="{$row.total_days}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-active_value" class="control-label col-xs-12 col-sm-2">{:__('Active_value')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-active_value" data-rule="required" class="form-control" name="row[active_value]" type="number" value="{$row.active_value}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-status" class="control-label col-xs-12 col-sm-2">{:__('Status')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-status" data-rule="required" class="form-control" name="row[status]" type="number" value="{$row.status}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_content" class="control-label col-xs-12 col-sm-2">{:__('Gift_content')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_content" data-rule="required" class="form-control" name="row[gift_content]" type="text" value='{$row.gift_content}'>
        </div>
    </div>
    <div class="form-group">
        <label for="c-create_time" class="control-label col-xs-12 col-sm-2">{:__('Create_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-create_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[create_time]" type="text" value="{$row.create_time|datetime}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-ext_json" class="control-label col-xs-12 col-sm-2">{:__('Ext_json')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-ext_json" class="form-control" name="row[ext_json]" type="text" value="{$row.ext_json}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
