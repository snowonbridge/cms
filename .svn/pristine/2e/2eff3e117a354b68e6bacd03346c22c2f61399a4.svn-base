<form id="add-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label for="c-uid" class="control-label col-xs-12 col-sm-2">{:__('Uid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-uid" data-rule="required" class="form-control" name="row[uid]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-vip" class="control-label col-xs-12 col-sm-2">{:__('Vip')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-vip" data-rule="required" class="form-control" name="row[vip]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-priv_id" class="control-label col-xs-12 col-sm-2">{:__('Priv_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-priv_id" data-rule="required" data-source="priv/index" class="form-control selectpage" name="row[priv_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_id" class="control-label col-xs-12 col-sm-2">{:__('Gift_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_id" data-rule="required" data-source="gift/index" class="form-control selectpage" name="row[gift_id]" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="c-gift_num" class="control-label col-xs-12 col-sm-2">{:__('Gift_num')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-gift_num" data-rule="required" class="form-control" name="row[gift_num]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-receive_status" class="control-label col-xs-12 col-sm-2">{:__('Receive_status')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-receive_status" data-rule="required" class="form-control" name="row[receive_status]" type="number" value="0">
        </div>
    </div>
    <div class="form-group">
        <label for="c-day_time" class="control-label col-xs-12 col-sm-2">{:__('Day_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-day_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[day_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group">
        <label for="c-create_time" class="control-label col-xs-12 col-sm-2">{:__('Create_time')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-create_time" data-rule="required" class="form-control datetimepicker" data-date-format="YYYY-MM-DD HH:mm:ss" data-use-current="true" name="row[create_time]" type="text" value="{:date('Y-m-d H:i:s')}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
